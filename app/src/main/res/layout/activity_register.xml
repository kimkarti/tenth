<?xml version="1.0" encoding="UTF-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#263738"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="Create New Account"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="3dp"
            android:gravity="center"
            android:text="*click below to choose userType account"
            android:textColor="#ffab91"
            android:textSize="24sp"
            android:textStyle="italic" />

        <Spinner
            android:id="@+id/choiceOfUser"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_gravity="left"

            android:layout_margin="20dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/input_fields"
            android:gravity="center"
            android:textColor="#70ff99"
            android:textColorHint="@color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/username"
                android:layout_width="165dp"
                android:layout_height="65dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="12dp"
                android:background="@drawable/product_card_view"
                android:gravity="left"
                android:hint="First Name"
                android:padding="5dp"
                android:textColor="@color/offWhite"
                android:textColorHint="#84ffff"
                android:textSize="24sp" />

            <!--        <LinearLayout-->
            <!--            android:layout_width="match_parent"-->
            <!--            android:layout_marginStart="20dp"-->
            <!--            android:layout_marginEnd="20dp"-->
            <!--            android:layout_marginTop="3dp"-->
            <!--            android:layout_height="wrap_content"-->
            <!--            android:orientation="horizontal">-->
            <!--            <TextView-->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:layout_marginTop="1dp"-->
            <!--                android:layout_gravity="center"-->
            <!--                android:gravity="center"-->
            <!--                android:text="Position"-->
            <!--                android:textColor="@color/colorPrimaryDark"-->
            <!--                android:textSize="20dp"-->
            <!--                android:textStyle="bold" />-->
            <!--            <Spinner-->
            <!--                android:id="@+id/choiceOfUser1"-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="45dp"-->
            <!--                android:layout_gravity="center_horizontal"-->
            <!--                android:layout_marginStart="15dp"-->
            <!--                android:textColor="@color/colorPrimaryDark"-->
            <!--                android:background="@drawable/product_card_view"-->
            <!--               -->

            <!--                android:gravity="center" />-->
            <!--        </LinearLayout>-->

            <EditText
                android:id="@+id/sname"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="12dp"
                android:background="@drawable/product_card_view"
                android:gravity="right"
                android:hint="Second Name"
                android:padding="5dp"
                android:layout_marginStart="12dp"
                android:textColor="@color/offWhite"
                android:textColorHint="#84ffff"
                android:textSize="24sp" />
        </LinearLayout>

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/product_card_view"
            android:gravity="left"
            android:hint="Email Address"
            android:textSize="24sp"
            android:padding="10dp"
            android:textColor="@color/offWhite"
            android:textColorHint="#84ffff" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="102dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/password"
                android:layout_width="175dp"
                android:layout_height="60dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/product_card_view"
                android:gravity="left"
                android:hint="Password"
                android:inputType="textPassword"
                android:padding="10dp"
                android:textColor="@color/offWhite"
                android:textColorHint="#84ffff"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/mobile"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="12dp"
                android:background="@drawable/product_card_view"
                android:gravity="right"
                android:hint="Phone Number"
                android:inputType="number"
                android:maxLength="10"
                android:padding="10dp"
                android:textColor="@color/offWhite"
                android:textColorHint="#84ffff"
                android:textSize="24sp" />
        </LinearLayout>

        <EditText
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/product_card_view"
            android:gravity="center"
            android:hint="license"
            android:inputType="text"
            android:maxLength="10"
            android:padding="10dp"
            android:layout_marginBottom="12dp"
            android:textColor="@color/offWhite"
            android:textColorHint="#84ffff"
            android:textSize="24sp" />

        <RadioGroup
            android:id="@+id/radioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/product_card_view"
            android:orientation="horizontal"
            android:padding="10dp">


            <RadioButton
                android:id="@+id/male"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:buttonTint="@color/colorPrimaryDark"
                android:minHeight="48dp"
                android:text="Male"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/female"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/colorPrimaryDark"
                android:minHeight="48dp"
                android:text="Female"

                android:textColor="@color/colorPrimaryDark"
                android:textSize="14sp"
                android:textStyle="bold" />

        </RadioGroup>


        <Button
            android:id="@+id/register"
            android:layout_width="290dp"
            android:layout_height="65dp"
            android:layout_gravity="center"
            android:layout_marginStart="30dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="12dp"
            android:background="#090"
            android:text="REGISTER"
            android:textAllCaps="false"
            android:textColor="#ffff"
            android:textSize="26sp" />


    </LinearLayout>

</ScrollView>